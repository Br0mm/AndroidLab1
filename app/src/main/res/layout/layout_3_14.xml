<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app ="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">


        <Button
                android:text="@string/button_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/button2"
                app:layout_constraintHeight_percent="0.4"
                app:layout_constraintWidth_percent="0.2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <Switch
                android:text="@string/switchText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/switch1"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintWidth_percent="0.4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                app:layout_constraintBottom_toTopOf="@id/checkBox"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/imageView3"
                android:contentDescription="@string/rick_astley"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintWidth_percent="0.4"
                app:srcCompat="@drawable/rick_astley"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="@string/text_example"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/textView2"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintWidth_percent="0.4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/radioButton"
                app:layout_constraintTop_toBottomOf="@id/radioButton"
                app:layout_constraintHorizontal_bias="0.0"/>
        <RadioButton
                android:text="@string/radiobutton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/radioButton"
                app:layout_constraintWidth_percent="0.2"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@id/checkBox"
                />
        <CheckBox
                android:text="@string/checkbox"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/checkBox"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintWidth_percent="0.4"
                app:layout_constraintStart_toStartOf="@id/radioButton"
                app:layout_constraintTop_toBottomOf="@id/switch1"
                app:layout_constraintBottom_toTopOf="@+id/radioButton"/>
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/progressBar"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintStart_toEndOf="@id/radioButton"
                app:layout_constraintTop_toBottomOf="@id/checkBox"
                app:layout_constraintEnd_toStartOf="@id/button2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>